.container {
  width: 100%;
}

/* 头部 */
.header {
  height: 60rpx;
}

.scroll {
  display: flex;
  height: 60rpx;
  white-space: nowrap;
  margin-top: 20rpx;
}

.scrollItem {
  height: 30rpx;
  margin-left: 30rpx;
}

.content {
  padding-bottom: 10rpx;
  font-size: 28rpx;
}

.active {
  border-bottom: 3rpx solid #d43c33;
}

/* 展示区 */
.showList {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.showListItem {
  margin-left: 20rpx;
  width: 30%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.showListItem image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 20rpx;
}

.showListItem text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}