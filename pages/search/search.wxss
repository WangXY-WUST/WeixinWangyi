.searchContainer {
  padding: 20rpx;
}
.header {
  position: relative;
  height: 60rpx;
  width: 100%;
}
.search {
  display: flex;
}
.searchInput {
  flex: 1;
  background: rgba(234, 234, 234, 0.5);
  border-radius: 30rpx;
}
.searchInput input {
  margin-left: 60rpx;
}
.search image {
  position: absolute;
  left: 10rpx;
  top: 8rpx;
  width: 30rpx;
  height: 30rpx;
}
.center {
  font-weight: 800;
  width: 100%;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.hot {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.hotItem {
  width: 50%;
  font-size: 26rpx;
  padding-bottom: 45rpx;
}
.number {
  padding: 15rpx;
}
.placeholder {
  font-size: 25rpx;
}
.hotItem image {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.searchContent {
  width: 100%;
  height: 600rpx;
}
.searchContenHeader {
  margin-top: 10rpx;
  color: #EC4141;
  font-size: 26rpx;
  border-bottom: 1rpx solid #EC4141;
  padding-bottom: 15rpx;
}
.searchIcon {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}
.searchList {
  display: flex;
  flex-direction: column;
}
.searchContentItem {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
}
.searchtext {
  flex: 1;
  border-bottom: 1rpx solid #eee;
  margin-left: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
}

.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
}
.historyTitle {
  line-height: 70rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.historyItem {
  border-radius: 30rpx;
  background-color: #efefef;
  margin-right: 20rpx;
  height: 50rpx;
  padding:0 10rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.delete {
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  height: 40rpx;
  width: 40rpx;
}