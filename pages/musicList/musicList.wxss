/* pages/musicList/musicList.wxss */
.header {
  height: 300rpx;
  width: 100%;
  position: relative;
}
image {
  width: 100%;
  height: 100%;
}
.header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  height: 100rpx;
  width: 100rpx;
  margin-left: -25rpx;
  margin-top: -25rpx;
  font-weight: 800;
  font-size: 36rpx;
  color: #fff;
}
.list {
  position: relative;
  top: -30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.list .listHeader {
  height: 60rpx;
  line-height: 60rpx;

}
.listHeader {
  margin-left: 10rpx;
}

.listHeader .more {
  float: right;
  margin-right: 20rpx;
}
.listScroll {
  position: relative;
  height: calc(100vh - 360rpx);
}
.list .listItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
  line-height: 75rpx;
}
.listItem image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.listItem .song {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song .songName {
  font-weight: 800;
}
.song .singName {
  font-size: 26rpx;
}

.listScroll .more {
  /* background-color: red; */
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -25rpx;
  width: 50rpx;
  height: 50rpx;
}